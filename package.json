{
  "name": "learn-with-jesus",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "backend": "node server/index.js",
    "db": "mongod --dbpath ./server/db/",
    "dev": "webpack-dev-server",
    "env": "env",
    "lint": "eslint --format table --color client/src/ server; exit 0",
    "build:html": "cp client/src/index.html client/dist;",
    "build:css": "cp -R client/src/css client/dist",
    "build:img": "cp -R client/src/img client/dist;",
    "build": "npm run build:html; npm run build:css; npm run build:img",
    "build:watch": "npm run build; chokidar 'client/src/img' 'client/src/css' 'client/src/index.html' -c 'npm run build'",
    "start": "mkdir -p client/dist && concurrently \"npm run build:watch\" \"'npm run dev'\" \"npm run backend\" \"npm run db\"",
    "test": "mocha client/src --recursive --reporter list --compilers js:babel-register --colors",
    "test:watch": "npm test -- -w",
    "test-e2e": "'./node_modules/nightwatch/bin/nightwatch' --config './client/e2e-tests/nightwatch.config.json' --tag e2e",
    "test-all": "npm test && npm run test-e2e"
  },
  "author": "Jes√∫s Real Serrano <jesus.real@outlook.com>",
  "license": "MIT",
  "homepage": "http://learn-with-jesus.com/",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-eslint": "^6.0.0",
    "babel-loader": "^6.0.0",
    "babel-plugin-transform-react-jsx": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.0.14",
    "babel-register": "^6.5.2",
    "babelify": "^7.2.0",
    "browser-sync": "^2.14.0",
    "browserify": "^13.0.0",
    "chokidar": "^1.4.2",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^2.0.0",
    "eslint": "^3.3.0",
    "eslint-config-eslint": "^3.0.0",
    "eslint-plugin-react": "^5.1.1",
    "express": "^4.14.0",
    "hamjest": "^2.13.0",
    "lite-server": "^2.2.2",
    "mocha": "^2.4.5",
    "chromedriver": "2.25.1",
    "nightwatch": "^0.x",
    "selenium-server-standalone-jar": "3.0.1",
    "webpack": "^1.12.2",
    "webpack-dev-server": "^1.16.2",
    "webpack-validator": "^2.2.9"
  },
  "dependencies": {
    "jquery": "^3.0.0",
    "mongodb": "^2.2.16",
    "node-fetch": "^1.3.3",
    "popsicle": "^9.0.0",
    "react": "^15.0.x",
    "react-dom": "^15.0.x",
    "rxjs": "^5.0.1"
  }
}
