{
  "name": "learn-with-jesus",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "backend": "node server/index.js",
    "dev": "lite-server",
    "env": "env",
    "lint": "eslint --format table --color client/src/ server; exit 0",
    "build:app": "echo > client/dist/index-temp.js; browserify client/src/index.js -t=babelify -o=client/dist/index-temp.js; mv client/dist/index-temp.js client/dist/index.js",
    "build:html": " cp -R client/src/css client/dist; cp -R client/src/img client/dist; cp client/src/index.html client/dist;",
    "build": "mkdir -p client/dist; npm run lint; npm test; npm run build:html && npm run build:app",
    "build:watch": "npm run build; chokidar 'client/src' -c 'npm run build'",
    "start": "concurrently \"npm run build:watch\" \"'npm run dev'\" \"npm run backend\" ",
    "test": "mocha client/src --recursive --reporter min --compilers js:babel-register --colors",
    "test:watch": "npm test -- -w",
    "test-e2e": "./client/e2e-tests/e2e-tests-runner.js -a e2e"
  },
  "author": "JesÃºs Real Serrano <jesus.real@outlook.com>",
  "license": "MIT",
  "homepage": "http://learn-with-jesus.com/",
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-eslint": "^6.0.0",
    "babel-plugin-transform-react-jsx": "^6.5.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-register": "^6.5.2",
    "babelify": "^7.2.0",
    "browser-sync": "^2.14.0",
    "browserify": "^13.0.0",
    "chokidar": "^1.4.2",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^2.0.0",
    "eslint": "^3.3.0",
    "eslint-config-eslint": "^3.0.0",
    "eslint-plugin-react": "^5.1.1",
    "express": "^4.14.0",
    "hamjest": "^2.13.0",
    "lite-server": "^2.2.2",
    "mocha": "^2.4.5",
    "nightwatch": "^0.9.5",
    "react": "^15.0.x",
    "react-dom": "^15.0.x",
    "selenium-standalone": "5.0.0"
  },
  "dependencies": {
    "jquery": "^3.0.0",
    "node-fetch": "^1.3.3"
  }
}
