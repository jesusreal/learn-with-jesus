{
    "src_folders": [ "client/e2e-tests/tests/"],
    "output_folder": "client/e2e-tests/reports/",
    "custom_commands_path": "client/e2e-tests/commands/",
    "custom_assertions_path": "client/e2e-tests/assertions/",
    "page_objects_path": "client/e2e-tests/pageobjects/",
    "globals_path": "client/e2e-tests/nightwatch.globals.js/",

    "end_session_on_fail": "true",
    "skip_testcases_on_fail": "true",

    "test_settings": {
        "default": {
            "desiredCapabilities": {
                "browserName": "chrome",
                "javascriptEnabled": true,
                "acceptSslCerts": true
            },
            "launch_url": "http://127.0.0.1",
            "screenshots": {
                "enabled": false,
                "on_failure": true,
                "on_error": false,
                "path": ""
            },
            "selenium": {
                "start_process": true,
                "server_path": "./node_modules/selenium-server-standalone-jar/jar/selenium-server-standalone-3.0.1.jar",
                "log_path": "",
                "host": "127.0.0.1",
                "port": 4444,
                "cli_args": {
                    "webdriver.chrome.driver": "./node_modules/chromedriver/bin/chromedriver"
                }
            },
            "silent": true
        }
    }
}
